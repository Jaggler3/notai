{
  "name": "notai",
  "version": "1.0.0",
  "description": "A Chrome extension that filters Reddit posts based on title and body content",
  "main": "content.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "build:clean": "rm -rf dist && tsc",
    "dev:clean": "rm -rf dist && tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "keywords": [
    "chrome-extension",
    "reddit",
    "filter",
    "content-filtering",
    "browser-extension"
  ],
  "author": "Martin Darazs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/reddit-post-filter.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/reddit-post-filter/issues"
  },
  "homepage": "https://github.com/yourusername/reddit-post-filter#readme",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-util": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.9.2"
  }
}
